<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/scheme_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="#EDE7F6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/scheme_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_add_circle_outline_black_24dp" />

            <TextView
                android:id="@+id/scheme_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_view_hint"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/scheme_thumbnail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_view_hint"
                android:id="@+id/scheme_type_text_view"
                android:layout_toEndOf="@id/scheme_thumbnail"
                android:layout_below="@id/scheme_name_text_view"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:fadingEdge="horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>